---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Vinted Bot - Login">
  <!-- Main -->
  <article id="main">
    <header class="special container">
      <h2><span class="icon solid fa-lock"></span> Login</h2>
      <p>Enter your credentials to login</p>
    </header>

    <form class="login">
      <label for="email">Email</label>
      <input type="email" id="email" name="email" placeholder="Your email.." />
      <br />
      <label for="password">Password</label>
      <input
        type="password"
        id="password"
        name="password"
        placeholder="Your password.."
      />
      <br />
      <input type="submit" value="Login" />
      <p class="error"></p>
      <p>Don't have an account? <a href="signup">Sign up</a></p>
    </form>
  </article>
</Layout>
<style lang="scss">
  .login {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  #email, #password, #terms, #login {
    width: 30%;
    padding: 12px 20px;
    margin: 8px 0;
    box-sizing: border-box;
  }

  #email, #password {
    border: 2px solid #ccc;
    border-radius: 4px;
  }
  // make the label go on the left of the input
  label {
    display: inline-block;
    width: 30%;
    text-align: left;
    margin: 0;
  }
  .special {
    margin-top: 2%;
    text-align: center;
  }
input {
  margin-top: 16px;
}

  @media screen and (max-width: 738px) {
    #email, #password, #terms, #login {
      width: 80%;
    }
    label {
      width: 80%;
    }
    
  }
</style>